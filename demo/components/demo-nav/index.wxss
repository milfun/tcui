.demo-nav-title{
    margin: 24px 0 8px 16px;
    color: rgba(69, 90, 100, 0.6);
    font-size: 14px;
}

.demo-nav-group{
    position: relative;
    display: flex;
    margin: 0 0 12px;
    padding-left: 20px;
    color: #323233;
    font-weight: 500;
    font-size: 14px;
    line-height: 40px;
    background: #f7f8fa;
    border-radius: 99px;
    transition: background 0.3s;
}

.demo-nav-group:hover {
    background: darken(#f7f8fa, 3%);
  }
  
  .demo-nav-group:active {
    background: darken(#f7f8fa, 6%);
  }